@model List<RoboDex__Capstone_.Models.ViewModels.ItemsTagsInfo>

@{
    ViewData["Title"] = "SellerInventory";
}

<h1>Seller's Inventory</h1>


<div>
    
    <hr />
    <dl class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Item.IMGUrl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Item.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Item.Price)
                    </th>

                </tr>
            </thead>

            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                <tr>
                    <td>
                    <div class="row">
                        <div class="col-4">
                            <img src="@Html.DisplayFor(model => model[i].Item.IMGUrl)" style="height: 100px; width: 100px;" />
                        </div>

                    </div>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model[i].Item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model[i].Item.Price)
                    </td>
                    
                    <td>
                        <a asp-action="ItemDetails" asp-route-id="@ViewData.Model[i].Item.ItemId">Details</a>
                    </td>

                </tr>
            }

                </tbody>

            </table>

    </dl>
</div>
<div>
    | <a asp-action="Details" asp-route-id="@ViewData.Model[0].Item.ItemId">Go To Seller's Profile</a> |
    <a asp-action="Follow" asp-route-id="@ViewData.Model[0].Item.ItemId">Follow This Seller</a> |
    <a asp-action="Details" asp-route-id="">Profile</a> |
   
</div>
