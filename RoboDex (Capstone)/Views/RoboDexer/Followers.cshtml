@model List<RoboDex__Capstone_.Models.RoboDexer>

@{
    ViewData["Title"] = "Followers";
}

<h1>Followers</h1>

<div>
    
    <hr />
    <dl class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model[0].IMGUrl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].UserName)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model[0].ContactInfo)
                    </th>


                </tr>
            </thead>

            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <td>
                        <div class="row">
                            <div class="col-4">
                                <img src="@Html.DisplayFor(model => model[i].IMGUrl)" style="height: 100px; width: 100px;" />
                            </div>

                        </div>
                    </td>               
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model[i].UserName)
                        </td>                       
                        <td>
                            @Html.DisplayFor(model => model[i].ContactInfo)
                        </td>

                    </tr>
                }
</div>

